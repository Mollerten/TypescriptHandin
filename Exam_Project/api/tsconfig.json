{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2017"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "src/resolvers"],
  "exclude": ["node_modules"]
}
